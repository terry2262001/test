<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddTypeFragment"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <EditText
        android:id="@+id/etAddProductType"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập Loại Sản Phẩm"
       />
    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_no_border"
            android:text="Hủy"
            android:layout_marginRight="5dp"
            android:id="@+id/btCancel"
           />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_no_border"
            android:text="Hủy Sữa"
            android:layout_marginRight="5dp"
            android:id="@+id/btCancelEdit"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAdd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_no_border"
            android:text="Thêm"
            android:layout_marginLeft="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btUpdate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_no_border"
            android:text="Cập Nhật"
            android:layout_marginLeft="5dp"
            android:visibility="gone"/>


    </LinearLayout>






</LinearLayout>